<Window x:Class="_09_InputEvent.KeyboardEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_09_InputEvent"
        mc:Ignorable="d"
        Title="KeyboardEvent" Height="300" Width="300">
    <Grid>
        <Grid>
            <StackPanel Orientation = "Horizontal" KeyDown = "OnTextInputKeyDown">
                <TextBox Width = "400" Height = "30" Margin = "10"/>
                <Button Click = "OnTextInputButtonClick"
            Content = "Open" Margin = "10" Width = "50" Height = "30"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
