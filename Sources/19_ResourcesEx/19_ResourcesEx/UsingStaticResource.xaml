<Window x:Class="_19_ResourcesEx.UsingStaticResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19_ResourcesEx"
        mc:Ignorable="d"
        Title="UsingStaticResource" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="Blue"/>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundColor}">
        <Button Content="Click To Change" HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="Button_Click"/>
    </Grid>
</Window>
