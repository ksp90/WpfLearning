<Window x:Class="AttachedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttachedEvent"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="50" Button.Click="Button_Click">
            <Button Content="Button1" Tag="MyButton1" Margin="10" />
            <Button Content="Button2" Margin="10" />
            <Button Content="Button3" Margin="10" />
            <Button Content="Button4" Margin="10" />
            <Button Content="Button5" Margin="10" />
            <Button Content="Button6" Margin="10" />
            <Button Content="Button7" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
