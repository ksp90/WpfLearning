<Window x:Class="_05_UserControlCustomControl.UsingCustomControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_UserControlCustomControl"
        xmlns:customControl="clr-namespace:MyCustomControl;assembly=MyCustomControl"
        mc:Ignorable="d"
        Title="UsingCustomControl" Height="300" Width="300">
    <StackPanel>
        <customControl:CustomControl1 x:Name = "customControl"  
         Content = "Click Me" Width = "70" 
         Margin = "10" Click = "customControl_Click"/>

        <TextBlock Name = "txtBlock"  
         Width = "250" Height = "30"/>
    </StackPanel>
</Window>
